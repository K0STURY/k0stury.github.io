---
import MainLayout from "../layouts/main-layout.astro";
import { Image } from "astro:assets";

const images = await Astro.glob("../assets/showcase/*.png");
---

<MainLayout>
	<div class="container">
		{
			images.map((image) => (
				<div>
					<Image
						src={image.default.src}
						width={512}
						height={512}
						alt="test"
					/>
				</div>
			))
		}
	</div>
</MainLayout>

<style>
	.container {
		background-color: var(--secondary-color);
		padding: 1rem;
		display: flex;
		flex-wrap: wrap;
		gap: 0.2rem;
	}

	.container div {
		width: 33%;
		height: 33%;
		overflow: hidden;
		border-radius: 0.5rem;
		transition: border-radius 250ms linear;
		cursor: pointer;
	}

	.container div:hover {
		border-radius: 1rem;
		animation: gelatine 0.375s ease-in-out;
	}

	img {
		width: 100%;
		height: 100%;
		aspect-ratio: 16 / 9;
		object-fit: cover;
	}

	[astro-icon] {
		width: 2.5rem;
	}
</style>
