---
import MainLayout from "../layouts/main-layout.astro";
import { Image } from "astro:assets";
import SectionWithHeading from "../components/section-with-heading.astro";
import getAllGames from "../api/games";

const images = await Astro.glob("../assets/showcase/*.png");

const games = await getAllGames();
---

<MainLayout title="Home">
	<SectionWithHeading title="My Art" icon="fa-solid:paint-brush" url="/art">
		{
			images.slice(-8).map((image) => (
				<div class="hover:animate-gelatine-in-out overflow-hidden rounded-md cursor-pointer">
					<Image
						src={image.default.src}
						width={512}
						height={512}
						class="w-full h-full object-cover object-center"
						alt="image"
						format="webp"
						loading="lazy"
					/>
				</div>
			))
		}
	</SectionWithHeading>

	<SectionWithHeading
		title="My Games"
		icon="ion:game-controller"
		url="/games"
	>
		{
			games
				.filter((game) => game.hasOwnProperty("cover_url"))
				.map((game) => (
					<a
						href={game.url}
						class="group overflow-hidden rounded-md cursor-pointer"
					>
						<div class="flex flex-col">
							<img
								src={game.cover_url}
								width={256}
								height={256}
								class="w-full h-full object-cover object-center group-hover:animate-gelatine-in-out"
								alt={game.title}
							/>
							<span class="font-bold">{game.title}</span>
						</div>
					</a>
				))
		}
	</SectionWithHeading>
</MainLayout>
