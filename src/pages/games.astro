---
import MainLayout from "../layouts/main-layout.astro";

const url = Astro.site === undefined ? "http://localhost:3000" : Astro.site;
const response = await fetch(`${url}/api/games.json`).then((data) =>
	data.json()
);
const games = response["games"];
---

<MainLayout>
	<div class="container">
		<ul>
			{games.map((game) => <li>{game.title}</li>)}
		</ul>
	</div>
</MainLayout>

<style>
	.container {
		background-color: var(--secondary-color);
		padding: 1rem;
		gap: 0.2rem;
	}

	ul {
	}
</style>
