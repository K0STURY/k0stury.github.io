---
import { contact } from "../../site.config";
import Icon from "astro-icon";
---

<nav>
    <!-- Logo -->
    <div class="logo">
        <img src="/images/kostur.png" alt="logo" />
    </div>
    <!-- Logo details -->
    <section class="logo-details">
        <h1>Kostur</h1>
        <span>Artist</span>
    </section>
    <!-- Contact Details -->
    <section class="contact">
        <ul>
            {
                contact.map((c) => (
                    <li>
                        <Icon name={c.icon} />
                        <div>
                            <h5>{c.name}</h5>
                            <span>{c.value}</span>
                        </div>
                    </li>
                ))
            }
        </ul>
    </section>
</nav>

<style>
    nav {
        background-color: var(--secondary-color);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border-radius: 0.375rem;
        width: 20rem;
    }

    [astro-icon] {
        width: 32px;
    }

    @keyframes gelatine {
        from,
        to {
            transform: scale(1, 1);
        }
        25% {
            transform: scale(0.9, 1.1);
        }
        50% {
            transform: scale(1.1, 0.9);
        }
        75% {
            transform: scale(0.95, 1.05);
        }
    }

    .logo {
        width: 100%;
        height: 33%;
        overflow: hidden;
        border-radius: 50%;
    }

    .logo img {
        width: 100%;
        height: 100%;
        aspect-ratio: 16 / 9;
    }

    .logo-details {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo-details span {
        background-color: var(--primary-color);
        padding: 0.375rem;
        border-radius: 0.375em;
        font-family: monospace;
    }

    .contact ul {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .contact ul li {
        display: flex;
        align-items: center;
        gap: 1rem;
        background-color: var(--primary-color);
        padding: 1rem;
        cursor: pointer;
        transition: all 250ms ease-in-out;
        outline: 2px solid var(--primary-color);
    }

    .contact ul li:hover {
        background-color: var(--secondary-color);
        outline: 2px solid var(--primary-color);
    }

    .contact ul li:hover [astro-icon] {
        animation: gelatine 0.5s infinite;
    }
</style>
