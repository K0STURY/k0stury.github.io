---
import { Icon } from "astro-icon";

interface Props {
    title?: string;
    icon?: string;
    url?: string;
    columnsSize?: "sm" | "md" | "lg";
}
const { title, icon, url, columnsSize = "md" } = Astro.props as Props;

function gridColumns(): string {
    switch (columnsSize) {
        case "sm":
            return "lg:grid-cols-3";
        case "md":
            return "lg:grid-cols-4";
        case "lg":
            return "lg:grid-cols-6";
    }
}
---

<section class="bg-secondary p-2 space-y-2 rounded-md">
    <h3 class="text-2xl font-extrabold flex items-center justify-between">
        <div class="flex items-center gap-2">
            {icon ? <Icon name={icon} class="w-5" /> : ""}
            {title ? title : ""}
        </div>
        {
            url ? (
                <a class="text-lg font-mono flex items-center gap-2" href={url}>
                    <Icon
                        name="ic:baseline-arrow-circle-right"
                        class="w-6 animate-bounce"
                    />
                </a>
            ) : (
                ""
            )
        }
    </h3>
    <div class={`grid grid-cols-2 ${gridColumns()} gap-2`}>
        <slot />
    </div>
</section>
