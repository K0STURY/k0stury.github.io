---
import ThemeToggler from "./theme-toggler.svelte";
---

<nav
  class="fixed items-center flex justify-between w-full z-50 group p-4"
  data-inview="false"
>
  <h1
    class="group-data-[inview='false']:text-4xl font-accent tracking-tighter transition-transform duration-200 ease-linear hover:animate-gelatine-in-out"
  >
    <a href="/" class="text-white" id="nav-title" data-text="Kostur." data-astro-prefetch="load">Kos<span class="text-accent">tur.</span></a>
  </h1>
  <ThemeToggler client:load />
</nav>

<script>
  function initNav() {
    // Intersection Observer setup — only on pages with #gallery
    const gallerySection = document.querySelector("#gallery");
    const navbar = document.querySelector("nav");

    if (gallerySection && navbar) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          navbar.setAttribute("data-inview", JSON.stringify(entry.isIntersecting));
        });
      }, { threshold: 1.0 });

      observer.observe(gallerySection);
    } else if (navbar) {
      // Non-gallery pages — keep nav transparent
      navbar.setAttribute("data-inview", "false");
    }

    // Text scramble + glitch effect on nav title
    const navTitle = document.getElementById("nav-title");
    if (navTitle) {
      const finalText = navTitle.dataset.text ?? "Kostur.";
      const accentStart = 3;
      const chars = "!@#$%&*?/\\|<>{}[]~^";
      const duration = 800;
      const steps = 12;
      let step = 0;
      let titleEl: HTMLElement = navTitle;

      function scrambleStep() {
        if (step >= steps) {
          titleEl.innerHTML = `Kos<span class="text-accent">tur.</span>`;
          titleEl.classList.remove("glitching");
          return;
        }

        const progress = step / steps;
        let result = "";
        for (let i = 0; i < finalText.length; i++) {
          if (i / finalText.length < progress) {
            const ch = finalText[i];
            if (i >= accentStart) {
              result += `<span class="text-accent">${ch}</span>`;
            } else {
              result += ch;
            }
          } else {
            const ch = chars[Math.floor(Math.random() * chars.length)];
            if (i >= accentStart) {
              result += `<span class="text-accent">${ch}</span>`;
            } else {
              result += ch;
            }
          }
        }
        titleEl.innerHTML = result;
        step++;
        setTimeout(scrambleStep, duration / steps);
      }

      // Remove old listener before adding new one
      const newTitle = navTitle.cloneNode(true) as HTMLElement;
      navTitle.parentNode?.replaceChild(newTitle, navTitle);
      titleEl = newTitle;

      newTitle.addEventListener("mouseenter", () => {
        step = 0;
        titleEl.classList.add("glitching");
        scrambleStep();
      });

      // Initial scramble on page load
      step = 0;
      titleEl.classList.add("glitching");
      scrambleStep();
    }
  }

  document.addEventListener("astro:page-load", initNav);
</script>

<style>
  [data-inview="true"] {
    @apply backdrop-blur-3xl bg-black bg-opacity-60;
  }

  [data-inview="true"] > h1 {
    @apply transform scale-110 text-4xl transition-transform duration-300 ease-linear;
  }

  /* Glitch effect on logo hover */
  #nav-title {
    position: relative;
    display: inline-block;
  }

  #nav-title.glitching {
    animation: glitch-jitter 0.1s steps(2) infinite;
  }

  @keyframes glitch-jitter {
    0% { transform: translate(0); }
    25% { transform: translate(-1px, 1px); }
    50% { transform: translate(1px, -1px); }
    75% { transform: translate(-1px, -1px); }
    100% { transform: translate(1px, 1px); }
  }
</style>
