---
import { Image } from "astro:assets";

const arts = await Astro.glob("../assets/banners/*.png");

// Optional: sort by ID-Name.png
arts.sort((a, b) => {
  const getId = (src: string) =>
    Number(src.match(/\/(\d+)-/)?.[1] ?? 0);
  return getId(b.default.src) - getId(a.default.src);
});

const showThree = arts.slice(0, 3);
---

<section id="hero">
  <div id="banner-wrapper">
    <div class="swiper">
      <div class="swiper-wrapper">
        {
          showThree.map((art, i) => (
            <div class="swiper-slide">
              <div
                class="slide-image"
                data-depth={0.15 + i * 0.05}
              >
                <Image
                  src={art.default}
                  width={art.width}
                  height={art.height}
                  alt="Banner image"
                  loading="eager"
                />
              </div>
            </div>
          ))
        }
      </div>

      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>

<style>
  #hero {
    height: 100vh;
    overflow: hidden;
  }

  #banner-wrapper {
    height: 100%;
    will-change: transform;
  }

  .swiper,
  .swiper-wrapper,
  .swiper-slide {
    height: 100%;
  }

  .swiper-slide {
    position: relative;
    overflow: hidden;
  }

  .slide-image {
    position: absolute;
    inset: 0;
    will-change: transform;
  }

  .slide-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  .swiper {
    --swiper-pagination-color: var(--accent-color);
    --swiper-navigation-color: var(--accent-color);
  }
</style>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination, Autoplay } from "swiper/modules";

  let scrollHandler: (() => void) | null = null;

  document.addEventListener("astro:page-load", () => {
    const wrapper = document.getElementById("banner-wrapper");
    if (!wrapper) return; // Not on a page with the banner

    // Clean up previous scroll handler
    if (scrollHandler) window.removeEventListener("scroll", scrollHandler);

    scrollHandler = () => {
      wrapper.style.transform = `translateY(${window.scrollY * 0.3}px)`;
    };
    window.addEventListener("scroll", scrollHandler);

    /* ---------------- Swiper ---------------- */
    new Swiper(".swiper", {
      modules: [Navigation, Pagination, Autoplay],
      loop: true,
      slidesPerView: 1,
      centeredSlides: true,

      autoplay: {
        delay: 6000,
        disableOnInteraction: false,
      },

      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },

      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  });
</script>
