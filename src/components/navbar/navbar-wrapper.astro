---
import { Icon } from "astro-icon";
import MobileMenu from "./mobile-menu.svelte";

const getActivePage = (): string => {
    const { pathname } = Astro.url;

    return pathname === "/" ? "/" : pathname.replace("/", "").toUpperCase();
};

const links = [
    {
        name: "HOME",
        url: "/",
    },
    {
        name: "GAMES",
        url: "/games",
    },
    {
        name: "ART",
        url: "/art",
    },
];

const cleanPathname = (url: string): string => {
    return url === "/"
        ? "HOME"
        : url
              .replaceAll("/ART/", "")
              .replace("/", "")
              .replaceAll(".HTML", "")
              .replaceAll("-", " ")
              .replace(/^ART(?=\S)/, "");
};

const title = cleanPathname(getActivePage());
---

<nav
    class="sticky top-0 z-50 flex items-center justify-between px-4 py-2 text-2xl shadow-2xl lg:text-base bg-secondary"
>
    <span id="swup" class="hidden font-bold lg:block">{title}</span>
    <ul class="flex justify-between w-full gap-4 lg:justify-end">
        <li id="swup">
            <a
                href="/"
                class={`flex items-center gap-3 p-2 transition-all duration-200 ease-in-out rounded-md hover:bg-primary group ${
                    getActivePage() === "/" ? "active-link" : ""
                }`}
            >
                <Icon
                    class="w-12 lg:w-6 group-hover:animate-gelatine-infite"
                    name="mdi:home"
                />
                Home
            </a>
        </li>
        <li id="swup">
            <a
                href="/games"
                class={`flex items-center gap-3 p-2 transition-all duration-200 ease-in-out rounded-md hover:bg-primary group ${
                    getActivePage().includes("GAMES") ? "active-link" : ""
                }`}
            >
                <Icon
                    class="w-12 lg:w-6 group-hover:animate-gelatine-infite"
                    name="ion:game-controller"
                />
                Games
            </a>
        </li>
        <li id="swup">
            <a
                href="/art"
                class={`flex items-center gap-3 p-2 transition-all duration-200 ease-in-out rounded-md hover:bg-primary group ${
                    getActivePage().includes("ART") ? "active-link" : ""
                }`}
            >
                <Icon
                    class="w-12 lg:w-6 group-hover:animate-gelatine-infite"
                    name="fa-solid:paint-brush"
                />
                Art
            </a>
        </li>
        <li>
            <MobileMenu client:load>
                <Icon
                    name="bi:list"
                    class="block lg:hidden relative w-12 h-12 z-[999999]"
                    slot="title"
                />
            </MobileMenu>
        </li>
    </ul>
</nav>

<style>
    .active-link {
        background-color: var(--primary-color);
        font-weight: bold;
    }

    .active-link [astro-icon] {
        animation: gelatine 0.5s infinite;
    }
</style>
