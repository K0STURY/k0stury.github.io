---
import Avatar from "@assets/logo/avatar.png";
import { getImage } from "astro:assets";

const contentImg = await getImage({
  src: Avatar,
  width: 1280,
  height: 720,
});

const ogImageUrl = new URL(contentImg.src, Astro.site ?? Astro.url).href;
const siteUrl = "https://k0stur.dev";
